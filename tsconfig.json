{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "./__tests__"
  ],
  "include": [
    "./src"
  ]
}
